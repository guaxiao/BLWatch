<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout_walk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:background="#3c444f"
    tools:context="com.tau.bluetoothlewatch.WalkFragment">

    <!-- TODO: Update blank fragment layout -->

    <requestFocus android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="279dp"
            android:layout_height="279dp"
            android:id="@+id/imageCircleButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/circle_ring"
            android:layout_weight="0.24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#5f666f"
            android:textSize="35sp"
            android:text="@string/step_nil"
            android:id="@+id/textStep"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="136dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#5f666f"
            android:text="0cal"
            android:id="@+id/textCal"
            android:layout_below="@+id/textStep"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/debug_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5f666f"
                android:textSize="35sp"
                android:text="@string/heart_nil"
                android:id="@+id/textHeartCount"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="60dp"
                android:layout_above="@+id/textRecvDeviceName"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#5f666f"
                android:text="NIL"
                android:id="@+id/textRecvDeviceAdd"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#5f666f"
                android:text="NIL"
                android:id="@+id/textRecvDeviceName"
                android:layout_above="@+id/textRecvDeviceAdd"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
