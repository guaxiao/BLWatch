<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_Device_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tau.bluetoothlewatch.DeviceListFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/layout_LeScanInfo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="设置"
                android:id="@+id/text_LeScanSetting"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_LeScanSetting"
                android:layout_marginEnd="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/dividerGray"
            android:id="@+id/view_Divider"
            android:layout_below="@+id/layout_LeScanInfo"
            android:layout_alignParentStart="true" />

        <ListView android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_ListHead"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/sysBlue400"
            android:text="设备列表"
            android:id="@+id/text_ListHead"
            android:layout_below="@+id/view_Divider"
            android:layout_margin="12dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/sysBlue400"
            android:text="@string/le_scan_active"
            android:id="@+id/text_LeScanInfo"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignTop="@+id/text_ListHead"
            android:layout_alignParentEnd="true" />

</RelativeLayout>
